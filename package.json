{
  "name": "code-sync",
  "displayName": "SyncSettings",
  "description": "A Visual Studio Code extension to synchronize your settings.",
  "version": "0.0.1",
  "publisher": "SirTobi",
  "author": {
    "name": "Tobias Kahlert (a.k.a SirTobi)"
  },
  "homepage": "https://github.com/SrTobi/code-sync/",
  "engines": {
    "vscode": "^0.10.1"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:codesync.backup",
    "onCommand:codesync.restore",
    "onCommand:codesync.show"
  ],
  "main": "./out/src/extension",
  "contributes": {
    "commands": [
      {
        "command": "codesync.backup",
        "title": "Sync Backup"
      },
      {
        "command": "codesync.restore",
        "title": "Sync Restore"
      },
      {
        "command": "codesync.show",
        "title": "Sync Show"
      }
    ],
    "configuration": {
      "title": "CodeSync Configuration",
      "type": "object",
      "properties": {
        "codesync.backupProviders": {
          "title": "Backup providers",
          "type": "array",
          "description": "A list of backup providers.",
          "items": {
            "oneOf": [
              {
                "type": "object",
                "description": "The filesystem provider. Backups the settings to the local filesystem.",
                "properties": {
                  "type": {
                    "enum": [
                      "fs"
                    ],
                    "description": "The type of the backup provider."
                  },
                  "path": {
                    "type": "string",
                    "description": "The path to the backup location."
                  }
                }
              }
            ]
          },
          "default": [
            {
              "type": "fs",
              "path": "/test"
            }
          ]
        },
        "codesync.filters": {
            "title": "Filter Lists",
            "type": "object",
            "description": "List of filter lists" ,
            "patternProperties": {
                ".*": {
                    "title": "Filter List",
                    "type": "object",
                    "description": "A list of how specific properties shall be synced",
                    "properties": {
                        "default": {
                            "enum": [
                                "ignore",
                                "up",
                                "down",
                                "sync"
                            ],
                            "description": "The default way properties are synced"
                        }
                    },
                    "patternProperties": {
                        ".*": {
                            "enum": [
                                "ignore",
                                "up",
                                "down",
                                "sync"
                            ],
                            "description": "The way the property is synced"
                        }
                    }
                }
            },
            "default": {
                "settings": {
                    "default": "ignore",
                    "extension.example": "sync"
                }
            }
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "gulp build",
    "compile": "gulp build"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/SrTobi/code-sync/"
  },
  "bugs": {
    "url": "https://github.com/SrTobi/code-sync/issues"
  },
  "devDependencies": {
    "babel-cli": "^6.2.0",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.2.0",
    "babel-plugin-transform-es2015-spread": "^6.1.18",
    "babel-preset-stage-3": "^6.1.18",
    "gulp": "^3.9.0",
    "gulp-babel": "^6.1.1",
    "gulp-concat": "^2.6.0",
    "gulp-typescript": "^2.9.2",
    "typescript": "^1.8.0-dev.20151213",
    "vscode": "0.10.x"
  },
  "dependencies": {
    "glob": "^6.0.2",
    "mkdirp": "^0.5.1"
  }
}
